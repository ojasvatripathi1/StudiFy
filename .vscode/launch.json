{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${webRoot}/.next/static/chunks/*",
        "webpack:/*": "${webRoot}/*"
      }
    },
    {
      "name": "Next.js: debug server-side",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "args": [
        "dev",
        "--turbopack",
        "-p",
        "8000"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Next.js: Full Stack Debug",
      "configurations": [
        "Next.js: debug server-side",
        "Next.js: debug in Chrome"
      ],
      "preLaunchTask": "next: dev",
      "stopAll": true
    }
  ]
}
