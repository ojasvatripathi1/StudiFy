{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "next: dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "line": 0,
          "column": 0,
          "message": 0
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*wait.*compiling.*",
          "endsPattern": "^.*ready.*started server on.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "label": "next: build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    },
    {
      "label": "next: lint",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\s].*?):(\\d+):(\\d+)\\s-\\s(error|warning|info)\\s*(.*)$",
          "file": 1,
          "location": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
